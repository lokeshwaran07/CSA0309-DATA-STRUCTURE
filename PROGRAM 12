#include <stdio.h>
#include <ctype.h>
#define SIZE 20
char stack[SIZE]; int top=-1;

void push(char x){ stack[++top]=x; }
char pop(){ return stack[top--]; }

int main(){
    char exp[]="A+B*C", out[20]; int i,k=0;
    for(i=0;exp[i];i++){
        if(isalnum(exp[i])) out[k++]=exp[i];
        else if(exp[i]=='*'||exp[i]=='/') push(exp[i]);
        else if(exp[i]=='+'||exp[i]=='-'){
            while(top!=-1) out[k++]=pop();
            push(exp[i]);
        }
    }
    while(top!=-1) out[k++]=pop();
    out[k]='\0';
    printf("Postfix: %s",out);
    return 0;
}
