#include <stdio.h>
#define V 4
#define INF 999

int minDist(int dist[], int visited[]) {
    int min=INF, idx=-1;
    for(int i=0;i<V;i++) 
        if(!visited[i] && dist[i]<min){ min=dist[i]; idx=i; }
    return idx;
}

void dijkstra(int graph[V][V], int src){
    int dist[V], visited[V]={0};
    for(int i=0;i<V;i++) dist[i]=INF;
    dist[src]=0;
    for(int c=0;c<V-1;c++){
        int u=minDist(dist,visited);
        visited[u]=1;
        for(int v=0;v<V;v++)
            if(!visited[v] && graph[u][v] && dist[u]+graph[u][v]<dist[v])
                dist[v]=dist[u]+graph[u][v];
    }
    for(int i=0;i<V;i++) printf("Distance from %d to %d = %d\n",src,i,dist[i]);
}

int main(){
    int graph[V][V]={{0,1,4,0},{1,0,2,6},{4,2,0,3},{0,6,3,0}};
    dijkstra(graph,0);
    return 0;
}
